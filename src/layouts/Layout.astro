---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,100..900;1,100..900&family=Ubuntu+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>
  </head>
  <body class="bg-zinc-200 flex-col">
    <body>
      <header class="header">
        <div class="container">
          <div class="navbar">
            <a class="logo navbar__text" href="index.astro">
              <h1 class="logo__name no-margin center-text navbar__text">
                Pomodoro Timer
              </h1>
            </a>

            <button class="menu">
              <svg
                class="menu-icon"
                xmlns="http://www.w3.org/2000/svg"
                width="1em"
                height="1em"
                viewBox="0 0 16 16"
              >
                <path
                  fill="currentColor"
                  fill-rule="evenodd"
                  d="M2 3.75A.75.75 0 0 1 2.75 3h10.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 3.75M2 8a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 8m0 4.25a.75.75 0 0 1 .75-.75h10.5a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75"
                  clip-rule="evenodd"></path>
              </svg>
            </button>
          </div>
        </div>
      </header>
      <section class="main">
        <slot />
      </section>
      <footer class="footer">
        <h3><footer></footer></h3>
      </footer>
    </body>
  </body>

  <style is:global>
    :root {
      --white: #ffffff;
      --black: #000000;
    }

    * {
      font-family:
        Azeret mono,
        monospace;
      font-optical-sizing: auto;
      font-weight: 300;
      font-style: normal;
    }

    body {
      background-image: url("bg_1.jpg");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center center;
    }

    body,
    html {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
    }

    html {
      box-sizing: border-box;
      font-size: 62.5%;
    }

    header,
    section,
    footer {
      width: 100%;
      box-sizing: border-box;
    }

    .container {
      width: min(90%, 170rem);
      margin: 0 auto;
    }

    h1 {
      font-size: 4.5rem;
    }

    /** Utilities **/
    .no-margin {
      margin: 0;
    }

    .no-padding {
      padding: 0;
    }

    .center-text {
      text-align: center;
    }

    body {
      /* display: flex; */
      justify-content: center;
      align-items: center;
      width: 100vw;
      height: 100vh;
      margin: 0;
      font-family: Arial, Helvetica, sans-serif;
    }

    header {
      /* background-color: var(--black); */
      background-color: rgba(0, 0, 0, 0.75);
      border: none;
    }

    .navbar {
      padding: 2rem 0;
    }

    @media (min-width: 768px) {
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
    }

    .navbar__text {
      color: var(--white);
    }

    .menu-icon {
      color: var(--white);
      width: 30px;
      height: 30px;
    }

    .main {
      width: auto;
      height: 75vh;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
      /* box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5); */
      background-color: rgba(0, 0, 0, 0.2);
      padding: 20px;
    }

    footer {
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.75);
    }
  </style>
</html>
