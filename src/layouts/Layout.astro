---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
	<html lang="en">
		<head>
			<meta charset="UTF-8" />
			<meta name="description" content="Astro description" />
			<meta name="viewport" content="width=device-width" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<title>{title}</title>
		</head>
		<body class="bg-gray-800 flex flex-col items-center">
			<slot />
		</body>
	</html>

	<style is:global>
		body {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  margin: 0;
  background-color: rgb(3, 11, 56);
  font-family: Arial, Helvetica, sans-serif;
}

.card {
  width: 800px;
  height: 500px;
  border: 1px solid #000000;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  border-radius: 10px;
  box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
  background-color: rgb(0, 212, 0);
  padding: 20px;
}

.menu {
  width: 500px;
  height: 100px;
  border: 1px solid #000000;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-radius: 10px;
  box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
  background-color: rgb(255, 168, 6);
  padding: 20px;
}

.timer {
  box-shadow: 10px 0 40px;
  padding: 25px;
  background-color: rgb(23, 38, 252);
;
  border-radius: 10px;
}

.input-timer {
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 10px;
  width: 200px;
  margin-bottom: 10px;
}
.image-container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  overflow: hidden;
}

#texto1{

  text-align: center;
  margin-top: 5%;
}

.image {
  width: 500px;
  border-radius: 6px;
}

.next {
  width: 100px;
  height: 50px;
  border: none;
  border-radius: 5px;
  background-color: rgb(0, 0, 0);
  color: #f3f3f3;
  font-size: 20px;
  cursor: pointer;
  padding: 2px;
  font-size: 2rem;
  text-decoration: none;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
}

.play {
  width: 100px;
  height: 50px;
  border: none;
  border-radius: 5px;
  background-color: rgb(77, 224, 8);
  color: #111111;
  font-size: 20px;
  cursor: pointer;
  padding: 2px;
  font-size: 2rem;
  text-decoration: none;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
}

.stop {
  width: 100px;
  height: 50px;
  border: none;
  border-radius: 5px;
  background-color: rgb(255, 3, 3);
  color: #ffffff;
  font-size: 20px;
  cursor: pointer;
  padding: 2px;
  font-size: 2rem;
  text-decoration: none;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
}



.next:hover {
  transform: translate(-5px, -5px);
  box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.5);
}
	</style>