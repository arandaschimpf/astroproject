---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
	<html lang="en">
		<head>
			<meta charset="UTF-8" />
			<meta name="description" content="Astro description" />
			<meta name="viewport" content="width=device-width" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<title>{title}</title>
		</head>
		<body class="bg-zinc-200 flex flex-col items-center">
			<slot />
		</body>
	</html>

  <style is:global>
    @font-face{
      font-family: "Digital-7 V7";
      font-optical-sizing: auto;
      src: url("https://db.onlinewebfonts.com/t/58045dabdc3a361cb9bb9faf2f1dd1f3.ttf")format("truetype");
      font-style: normal;
      font-weight: <weight>;
    }
  
    body {
  
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: aliceblue;
    }
  
  
  
    .card {
    width: 800px;
    height: 300px;
    background-color: rgb(31, 30, 30);
    border: 1px solid #000000;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    border-radius: 20px;
    box-shadow: 10px 10px 10px rgba(0, 0, 0, 0.5);
    padding: 20px;
  }
  
    /* Timer Style */
  
  
  .timer {
    display: flex;
    justify-content: center;	
    align-items: center;
      margin: 25px;
    font-family: "Digital-7 V7";
    color: #bb2d3b;
    font-size: 7rem;
    }
  
    .timer-container{
    width: 100%;
    height: 150px;
    background-color: #000000;
    display: flex;
    flex-direction: column ;
    justify-content: space-between;
    align-items: center;
    overflow: hidden;
    
    }
  
    .button-container {
    width: 100%;
    height: 60px;
    background-color: #000000;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    overflow: hidden;
    }
  
    
  
    .start-button {
    height: 50px;
    width: 100px;
      margin-left: 100px;
      cursor: pointer;
      background-color: #2f2f30;
      color: white;
      border: none;
      border-radius: 5px;
    font-size: 1.5rem;
    }
    .start-button:hover {
      background-color: #0056b3;
    }
    .start-button:active {
      background-color: #004286;
    }
  
    .stop-button {
    height: 50px;
    width: 100px;
      cursor: pointer;
      background-color: #2f2f30;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1.5rem;
    }
  
    .stop-button:hover {
    background-color: #bb2d3b;
    }
  
    .stop-button:active {
    background-color: #8a1f25;
    }
  
    .reset-button {
    height: 50px;
    width: 100px;
      margin-right: 100px;
      cursor: pointer;
      background-color: #2f2f30;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 1.5rem;
    }
  
    .reset-button:hover {
    background-color: #d39e00;
    }
  
    .reset-button:active {
    background-color: #8c7301;
    }
    
  
  
  </style>

