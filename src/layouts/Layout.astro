---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
	<html lang="en">
		<head>
			<meta charset="UTF-8" />
			<meta name="description" content="Astro description" />
			<meta name="viewport" content="width=device-width" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<title>{title}</title>
		</head>
		<body>
			<slot />
		</body>
	</html>

  <style is:global>
    /* @font-face{
      font-family: "Digital-7 V7";
      font-optical-sizing: auto;
      src: url("https://db.onlinewebfonts.com/t/58045dabdc3a361cb9bb9faf2f1dd1f3.ttf")format("truetype");
      font-style: normal;
      font-weight: <weight>;
    } */
  
    body {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
  
  
  
    .card {
      width: 800px;
      margin: 20px auto;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 0 4px rgba(0, 0, 0, 0.1);
      background-color: white;
    }

    .task-toggle {
      width: 100%;
      display: flex;
      padding: 10px;
      border-bottom: 1px solid #ddd;
      cursor: pointer;
    }

    .task-list {
      padding: 0;
      margin: 0;
      list-style: none;
    }

    .task-item:hover {
  background-color: #fafafa;
}

.task-item {
  padding: 10px;
  border-bottom: 1px solid #ddd;
  cursor: pointer;
}



.task-checkbox {
  margin-right: 10px;
  vertical-align: middle;
}



.task-label {
  font-size: 14px;
  color: #555;
}

.task-label:hover {
  color: #333;
}

.task-state{
  display: inline-flex;
}

#remaining-tasks {
  margin-top: 10px;
  padding: 10px 0;
}

#remaining-tasks-count {
  color: #333;
  font-size: 18px;
  font-weight: 500;
}

/* Botones de filtro */

.task-buttons {
  display: flex;
  justify-content: center;
  margin-top: 10px;
}

.task-buttons button {
  border: none;
  border-radius: 5px;
  color: #555;
  cursor: pointer;
  font-size: 16px;
  font-weight: 500;
  padding: 5px 10px;
}

.task-buttons button:hover {
  background-color: #eee;
}

/* Boton 'Clear Completed' */

#clear-completed {
  background-color: #f7f7f7;
  border: none;
  border-radius: 5px;
  color: #555;
  cursor: pointer;
  font-size: 16px;
  font-weight: 500;
  margin-top: 10px;
  padding: 5px 10px;
}

#clear-completed:hover {
  background-color: #eee;
}






  
