---
interface Props {
	title: string;
}

const { title } = Astro.props;
import  '../components/Timer.astro'
---
<!doctype html>
	<html lang="en">
		<head>
			<meta charset="UTF-8" />
			<meta name="description" content="Astro description" />
			<meta name="viewport" content="width=device-width" />
			<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
			<title>{title}</title>
		</head>
		<body class="bg-zinc-200 flex flex-col items-center">
			<slot />
      <div id="clock">
        <h1 class="header">Cron√≥metro</h1>
        <div id="timer"> 05:00:00 </div>
        <button id="startButton" onclick="controlarTemporizador()">Iniciar</button>
        <button id="restartButton" onclick="restartTimer()">Reiniciar</button>
    </div>
		</body>
	</html>

	<style is:global>
	body {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(120deg, #ffe53bd8, #ff2525da);
           /* background-color: #767373;*/
        }

        #clock {
            width: 200px;
            height: 200px;
            border: 5px  #a29a9a;
            border-radius: 50%;
            background-color: #545151;
            background: linear-gradient(120deg, #ffe53bd8, #ff2525da);
            display: flex;
            background-size: cover;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            font-family: Arial, sans-serif;
            box-shadow: 0 -15px 15px rgba(95, 93, 93, 0.3),
                        inset 0 -15px 15px rgb(255, 255, 255, .03),
                        0 -15px 15px rgb(0, 0, 0, .3),
                        inset 0 -15px 15px rgba(0, 0, 0, .3);
        }

        .header {
            size: 50%;
            top: 125px;
            left: 1/2;
            justify-content: center;
            position: absolute;
        }

        #timer {
            top: 5/10;
            font-size: 30px;
            justify-content: center;
            position: absolute;
        }

        #startButton {
            top: 70%;
            right: 1/2;
            padding: 15px;
            padding-left: 25px;
            padding-right: 25px;
            font-size: 16px;
            cursor: pointer;
            position: absolute;
            background: linear-gradient(120deg, #ffe53bd8, #ff2525da);
            border-color: black;
            border-radius: 50px;
            box-shadow: 0 -15px 15px rgba(95, 93, 93, 0.2),
                        inset 0 -15px 15px rgb(255, 255, 255, .02),
                        0 -15px 15px rgb(0, 0, 0, .2),
                        inset 0 -15px 15px rgba(0, 0, 0, .2); ;
        }

        #restartButton {
            top: 80%;
            position: absolute;
            padding: 15px;
            font-size: 16px;
            background: linear-gradient(120deg, #ffe53bd8, #ff2525da);
            border-radius: 50px;
            box-shadow:  0 -15px 15px rgba(95, 93, 93, 0.2),
                        inset 0 -15px 15px rgb(255, 255, 255, .02),
                        0 -15px 15px rgb(0, 0, 0, .2),
                        inset 0 -15px 15px rgba(0, 0, 0, .2);;
        }
	</style>
