---
import './Timer.css';
---


<div class="timer-container">
  <div class="outer">
    <button class="timer-button inner">
      <h3 class="timer-text" id="timerText">20:00</h3>
      <div class="overlay" id="overlay">
        <p class="overlay-text" id="overlayText">START</p>
      </div>
    </button>
  </div>
  <svg
    class="progress-bar"
    xmlns="http://www.w3.org/2000/svg"
    version="1.1"
    width="470px"
    height="470px"
  >
    <defs>
      <linearGradient id="GradientColor">
        <stop offset="0%" stop-color="#DA22FF"></stop>

        <stop offset="100%" stop-color="#9733EE"></stop>
      </linearGradient>
    </defs>
    <circle id="timerBar" cx="235" cy="235" r="230" stroke-linecap="round"
    ></circle>
  </svg>
</div>

<script src="./Timer.js"></script>
