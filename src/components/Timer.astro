<html>
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Azeret+Mono:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <style>
      .container{
        display: flex;
        width: 500px;
        padding: 50px 0;
        row-gap: 30px;
        flex-direction: column;
        align-items: center;
      }
      .timer{
        width: 350px;
        height: 350px;
        justify-content: center;
        align-items: center;
        display: flex;
        border-radius: 100%;
        color: white;
        background: conic-gradient(rgb(255, 89, 0) 0deg, rgb(255, 219, 101)  0deg);
        position: relative;
      }
      .timer::before{
        content: "";
        position: absolute;
        height: 300px;
        width: 300px;
        border-radius: 100%;
        background: linear-gradient(to bottom right, rgb(255, 89, 0), rgb(255, 219, 101));
      }
      .value{
        position: relative;
        font-size: 80px;

      }
      button{
        margin-top: 80px;
        font-size: 50px;
        font-weight: bolder;
        color: white;
        border-radius: 10%;
      }

      .image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); 
        display: flex;
        justify-content: center;
        align-items: center;
      }
      @keyframes rotateOneSecond {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(720deg); }
      }

      .image-overlay img {
        animation: rotateOneSecond 1s linear forwards;
      }

      .close-button {
        position: absolute;
        top: 10px;
        right: 10px;
        font-size: 24px;
        color: white;
        cursor: pointer;
      }
    </style>
  </head>

  <body>
    <div class="container">
      <div class="timer">
        <span class="value">00:00</span>
      </div>
      <div class="image-overlay" id="overlay" style="display: none;">
        <span class="close-button" id="closeButton">x</span>
        <img src="image1.jpg" alt="Imagen de finalizaciÃ³n">
        <audio id="audio" src="alarm.mp3"></audio>
      </div>
    </div>
    <button class="start-button">- START -</button>
    <script>
      function updateTimerDisplay(time: number) {
        const minutes = Math.floor(time / 60).toString().padStart(2, '0');
        const seconds = (time % 60).toString().padStart(2, '0');
        value.textContent = `${minutes}:${seconds}`;
        if (timer) {
              const progress = (remainingTime / totalTime) * 100;
              timer.style.background = `conic-gradient(rgb(255, 219, 101) ${progress}%, rgb(255, 89, 0) 0%)`;
            }

            if (remainingTime <= 0) {
              clearInterval(interval as NodeJS.Timeout);
              if(overlay){
                overlay.style.display = 'flex';
                audio?.play();
              }
            }
      }

      const button = document.querySelector('.start-button') as HTMLElement;
      const timer = document.querySelector('.timer') as HTMLElement;
      const value = document.querySelector('.value') as HTMLElement;
      const overlay = document.getElementById('overlay');
      const audio = document.getElementById('audio') as HTMLAudioElement;
      let interval: NodeJS.Timeout | null = null;
      let isRunning = false;
      let totalTime = 60* 5;
      let remainingTime = totalTime;
  
      updateTimerDisplay(remainingTime);
      button?.addEventListener('click', () => {
        if (!isRunning) {
          interval = setInterval(() => {
            remainingTime--;
            updateTimerDisplay(remainingTime); 

          }, 1000);
          isRunning = true;
          button.textContent = '- PAUSE -';
        } else {
          if (interval) {
            clearInterval(interval);
          }
          isRunning = false;
          button.textContent = '- START -';
        }
      })
      const closeButton = document.getElementById('closeButton');
      closeButton?.addEventListener('click', () => {
        if(overlay){
          overlay.style.display = 'none';
          audio?.pause();
          if(button){
            button.textContent = '- START -';
            button.click();
          }
          remainingTime = totalTime;
          updateTimerDisplay(remainingTime);
        }
      });
    </script>
  </body>
</html>