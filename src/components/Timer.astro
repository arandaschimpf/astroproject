<style>
  .timer-container {
    text-align: center;
    margin-top: 50px;
    position: relative;
  }

  .timer {
    font-size: 3rem;
    color: #333;
    background-color: #f0f0f0;
    border-radius: 50%;
    border-width: 2px;
    border-color: #333;
    padding: 20px;
    width: 200px;
    height: 200px;
    display: flex;
    flex-direction: column; 
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }

  .start-button {
    font-size: 1.5rem;
    color: #fff; 
    background-color: #333; 
    border: none;
    border-radius: 5%; 
    width: 7.5rem; 
    height: 3rem; 
    padding: 0 20px; 
    margin-top: 20px; 
    cursor: pointer;
    transition: transform 0.3s ease;
    font-weight: 500; 
  }

  .start-button:hover {
    transform: scale(1.1); 
  }
</style>

<script>
  function startTimer() {
    const button = document.querySelector('.start-button')
    const timer = document.querySelector('.timer')
    
    button?.addEventListener('click', () => {
      let count = 60 * 5
      const interval = setInterval(() => {
        count--
        const minutes = Math.floor(count / 60).toString().padStart(2, '0')
        const seconds = (count % 60).toString().padStart(2, '0')
        const text = `${minutes}:${seconds}`
        if (timer) {
          timer.innerHTML = text
        }
        if (count <= 0) {
          clearInterval(interval)
        }
      }, 1000)
    })
  }
  startTimer();
</script>

<div class="timer-container">
  <div class="timer">
    00:00
  </div>
  <button class="start-button">Iniciar</button>
</div>